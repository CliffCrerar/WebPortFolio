{
    "debug.allowBreakpointsEverywhere": true,
    "debug.hideActionBar": false,
    "html.format.enable": true,
    "html.suggest.html5": true,
    "html.validate.scripts": true,
    "html.validate.styles": true,
    "html.autoClosingTags": true,
    "json.format.enable": true,
    "css.validate": true,
    "less.validate": true,
    "problems.decorations.enabled": true,
    "problems.autoReveal": true,
    "prettier.parser": "babylon",
    "prettier.trailingComma": "all",
    "npm-intellisense.scanDevDependencies": true,
    "npm-intellisense.importES6": true,
    "jshint.enable": true,
    "hlsl.suggest.basic": true,
    "vsicons.dontShowNewVersionMessage": true,
    "prettier.javascriptEnable": ["javascript", "javascriptreact"],
    "prettier.cssEnable": ["css", "less", "scss"],
    "prettier.jsonEnable": ["json"],
    "path-intellisense.extensionOnImport": true,
    "npm.autoDetect": "on",
    "npm.packageManager": "npm",
    "beautify.language": {
        "js": {
            "type": ["javascript", "json"],
            "filename": [".jshintrc", ".jsbeautify"]
        },
        "css": ["css", "scss"],
        "html": ["htm", "html"]
    },
    "html.format.contentUnformatted": "pre,code,textarea",
    "editor.autoClosingBrackets": true,
    "editor.matchBrackets": true,
    "bracketPairColorizer.contextualParsing": true,
    "bracketPairColorizer.consecutivePairColors": ["()", "[]", "{}", ["Gold", "Orchid", "LightSkyBlue"], "Red"],
    "explorer.decorations.colors": true,
    "colorize.languages": ["css", "sass", "scss", "less", "postcss", "sss", "stylus", "xml", "svg"],
    "colorize.activate_variables_support_beta": true,
    "editor.tokenColorCustomizations": {
        "variables": "#ABEBC6"
    },
    "javascript.nameSuggestions": true,
    "javascript.referencesCodeLens.enabled": true,
    "javascript.validate.enable": true
}